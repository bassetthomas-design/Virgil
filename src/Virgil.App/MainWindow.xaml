<Window x:Class="Virgil.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:Virgil.App.Controls"
        mc:Ignorable="d"
        Title="Virgil" Height="640" Width="1024"
        WindowStartupLocation="CenterScreen"
        Background="#111316">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="48"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Top Bar -->
        <Border Grid.Row="0" Background="#1B1F24">
            <DockPanel Margin="12,0" VerticalAlignment="Center">
                <!-- Left: Clock text -->
                <TextBlock x:Name="ClockText"
                           DockPanel.Dock="Left"
                           VerticalAlignment="Center"
                           FontSize="14"
                           Foreground="#DDE3EA"
                           Text="--:--:--"/>
                <!-- Spacer -->
                <DockPanel DockPanel.Dock="Left" Width="16"/>

                <!-- Monitoring toggle -->
                <ToggleButton x:Name="SurveillanceToggle"
                              DockPanel.Dock="Left"
                              Width="180" Height="28"
                              VerticalAlignment="Center"
                              Margin="0,0,8,0"
                              Content="Démarrer la surveillance"
                              Checked="SurveillanceToggle_Checked"
                              Unchecked="SurveillanceToggle_Unchecked"/>
                <!-- Spacer -->
                <DockPanel DockPanel.Dock="Left" Width="8"/>

                <!-- Open Config -->
                <Button x:Name="OpenConfigBtn"
                        DockPanel.Dock="Left"
                        Height="28"
                        Content="Ouvrir la config"
                        Click="OpenConfig_Click"/>

                <!-- Right side filler -->
                <DockPanel DockPanel.Dock="Right" Width="0"/>
            </DockPanel>
        </Border>

        <!-- Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="320"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left: Avatar -->
            <StackPanel Grid.Column="0" Margin="16" VerticalAlignment="Top" >
                <Border CornerRadius="12" Background="#15181D" Padding="12" >
                    <!-- IMPORTANT: le nom expose 'AvatarControl' au code-behind -->
                    <controls:VirgilAvatar x:Name="AvatarControl"
                                           Width="280" Height="280"/>
                </Border>
            </StackPanel>

            <!-- Right: Actions -->
            <StackPanel Grid.Column="1" Margin="16" VerticalAlignment="Top" Spacing="8">
                <TextBlock Text="Actions rapides" FontSize="16" FontWeight="Bold" Foreground="#E6EDF3" Margin="0,0,0,8"/>

                <!-- Les 5 boutons correspondant EXACTEMENT aux handlers attendus -->
                <Button Height="36" Content="Maintenance complète"
                        Click="Action_MaintenanceComplete"/>
                <Button Height="36" Content="Nettoyage fichiers temporaires"
                        Click="Action_CleanTemp"/>
                <Button Height="36" Content="Nettoyage navigateurs"
                        Click="Action_CleanBrowsers"/>
                <Button Height="36" Content="Mises à jour (winget + jeux + applis)"
                        Click="Action_UpdateAll"/>
                <Button Height="36" Content="Microsoft Defender (scan & update)"
                        Click="Action_Defender"/>

                <!-- Placeholders pour indicateurs (optionnel, non bloquant build) -->
                <Border Margin="0,16,0,0" Background="#15181D" CornerRadius="8" Padding="12">
                    <StackPanel>
                        <TextBlock Text="Statuts" Foreground="#AABACB"/>
                        <TextBlock x:Name="StatusText" Text="En attente..."
                                   Foreground="#DDE3EA" Margin="0,8,0,0"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
