<Window x:Class="Virgil.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Virgil" Height="720" Width="1200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="48"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Top bar -->
        <DockPanel Grid.Row="0" Margin="12,6">
            <Button x:Name="ToggleSurveillance" Width="160" Height="32" Content="Surveillance: OFF" Click="ToggleSurveillance_Click"/>
            <TextBlock Text="" HorizontalAlignment="Right" DockPanel.Dock="Right" VerticalAlignment="Center"/>
        </DockPanel>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="340"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left: Avatar + Gauges -->
            <StackPanel Grid.Column="0" Margin="12">
                <!-- Avatar placeholder (kept existing control if present) -->
                <Border Height="220" Background="#111" CornerRadius="8" Margin="0,0,0,8"/>

                <!-- Gauges -->
                <StackPanel>
                    <TextBlock Text="CPU"/>
                    <ProgressBar Minimum="0" Maximum="100" Height="12" Value="{Binding Monitoring.CpuUsage}" Margin="0,2,0,0"/>
                    <TextBlock Text="{Binding Monitoring.CpuTemp, StringFormat=Temp: {0}°C}" Margin="0,2,0,8"/>

                    <TextBlock Text="GPU"/>
                    <ProgressBar Minimum="0" Maximum="100" Height="12" Value="{Binding Monitoring.GpuUsage}" Margin="0,2,0,0"/>
                    <TextBlock Text="{Binding Monitoring.GpuTemp, StringFormat=Temp: {0}°C}" Margin="0,2,0,8"/>

                    <TextBlock Text="RAM"/>
                    <ProgressBar Minimum="0" Maximum="100" Height="12" Value="{Binding Monitoring.RamUsage}" Margin="0,2,0,8"/>

                    <TextBlock Text="DISQUE"/>
                    <ProgressBar Minimum="0" Maximum="100" Height="12" Value="{Binding Monitoring.DiskUsage}" Margin="0,2,0,0"/>
                    <TextBlock Text="{Binding Monitoring.DiskTemp, StringFormat=Temp: {0}°C}" Margin="0,2,0,0"/>
                </StackPanel>
            </StackPanel>

            <!-- Right: Chat stays as-is (placeholder) -->
            <Grid Grid.Column="1">
                <!-- existing chat layout -->
            </Grid>
        </Grid>
    </Grid>
</Window>
