<Window x:Class="Virgil.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:Virgil.App.Controls"
        xmlns:local="clr-namespace:Virgil.App"
        mc:Ignorable="d"
        Title="Virgil" Height="720" Width="1180"
        Background="#111318">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>

        <!-- Style conteneur items du chat (ta ListBox "MessageList") -->
        <Style x:Key="ChatItemContainer" TargetType="ListBoxItem">
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>

        <!-- Bulle par défaut pour un local:ChatMessage (au cas où VirgilChatPanel n'est pas utilisé) -->
        <DataTemplate DataType="{x:Type local:ChatMessage}">
            <Border CornerRadius="10"
                    Background="{Binding BubbleBrush}"
                    Padding="10" Margin="2,4"
                    SnapsToDevicePixels="True">
                <TextBlock Text="{Binding Text}" Foreground="White" TextWrapping="Wrap"
                           FontSize="14"/>
            </Border>
        </DataTemplate>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="48"/>   <!-- top bar -->
            <RowDefinition Height="*"/>    <!-- content -->
            <RowDefinition Height="44"/>   <!-- status -->
        </Grid.RowDefinitions>

        <!-- TOP BAR (DockPanel n'a pas Padding -> utiliser Margin ou Border) -->
        <DockPanel Grid.Row="0" Background="#151821" LastChildFill="True" Margin="10,0">
            <TextBlock x:Name="ClockText"
                       Foreground="#8FA3B8" VerticalAlignment="Center"
                       FontWeight="SemiBold"/>
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                <ToggleButton x:Name="SurveillanceToggle"
                              Content="{Binding SurveillanceButtonText}"
                              IsChecked="{Binding IsSurveillanceOn, Mode=TwoWay}"
                              Margin="8,6" Padding="14,6"/>
            </StackPanel>
        </DockPanel>

        <!-- CONTENT -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="320"/>   <!-- avatar + stats -->
                <ColumnDefinition Width="*"/>     <!-- chat + actions -->
            </Grid.ColumnDefinitions>

            <!-- LEFT PANEL: Avatar + Stats (stats visibles seulement en surveillance) -->
            <StackPanel Grid.Column="0" Margin="12">
                <Border CornerRadius="16" Background="#161a23" Padding="12">
                    <controls:VirgilAvatar x:Name="AvatarControl" />
                </Border>

                <Border CornerRadius="12" Background="#161a23" Padding="12"
                        Visibility="{Binding IsSurveillanceOn, Converter={StaticResource BoolToVis}}"
                        Margin="0,12,0,0">
                    <StackPanel>
                        <TextBlock Text="Surveillance" FontWeight="SemiBold" Foreground="#CDE3FF"
                                   Margin="0,0,0,8"/>
                        <StackPanel>
                            <TextBlock Text="{Binding CpuTempText}" Foreground="#AFC6DA"/>
                            <ProgressBar Minimum="0" Maximum="100" Height="8" Value="{Binding CpuUsage}" Margin="0,2,0,6"/>

                            <TextBlock Text="{Binding GpuTempText}" Foreground="#AFC6DA"/>
                            <ProgressBar Minimum="0" Maximum="100" Height="8" Value="{Binding GpuUsage}" Margin="0,2,0,6"/>

                            <TextBlock Text="Mémoire" Foreground="#AFC6DA"/>
                            <ProgressBar Minimum="0" Maximum="100" Height="8" Value="{Binding MemUsage}" Margin="0,2,0,6"/>

                            <TextBlock Text="Disque" Foreground="#AFC6DA"/>
                            <ProgressBar Minimum="0" Maximum="100" Height="8" Value="{Binding DiskUsage}" Margin="0,2,0,0"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- RIGHT: Chat + Actions -->
            <Grid Grid.Column="1" Margin="12" >
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>    <!-- chat -->
                    <RowDefinition Height="Auto"/> <!-- actions -->
                </Grid.RowDefinitions>

                <!-- CHAT AREA -->
                <Border CornerRadius="12" Background="#151821" Padding="10" Margin="0,0,0,10">
                    <!-- Tu conserves ton VirgilChatPanel (effet Thanos, TTL, etc.) -->
                    <controls:VirgilChatPanel x:Name="ChatArea"
                                              ChatItemsSource="{Binding ChatMessages}"
                                              />
                </Border>

                <!-- ACTION BUTTONS -->
                <UniformGrid Grid.Row="1" Columns="4" Margin="0,6,0,0">
                    <Button Content="Maintenance complète" Click="FullMaintenanceButton_Click" Margin="4" Padding="10"/>
                    <Button Content="Nettoyer TEMP" Click="CleanButton_Click" Margin="4" Padding="10"/>
                    <Button Content="Nettoyer navigateurs" Click="CleanBrowsersButton_Click" Margin="4" Padding="10"/>
                    <Button Content="Tout mettre à jour" Click="UpdateAllButton_Click" Margin="4" Padding="10"/>
                </UniformGrid>
            </Grid>
        </Grid>

        <!-- STATUS BAR (DockPanel: remplacer Padding par Margin) -->
        <DockPanel Grid.Row="2" Background="#151821" LastChildFill="True" Margin="10,6">
            <TextBlock x:Name="StatusText" Foreground="#AFC6DA" VerticalAlignment="Center" />
            <ProgressBar x:Name="TaskProgress" DockPanel.Dock="Right" Width="280" Height="10"
                         Margin="10,0,0,0" Minimum="0" Maximum="100"/>
        </DockPanel>
    </Grid>
</Window>
