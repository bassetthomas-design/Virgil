<Window x:Class="Virgil.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:Virgil.App.Controls"
        mc:Ignorable="d"
        Title="Virgil" Height="720" Width="1180"
        Background="#111318">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="48"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="44"/>
        </Grid.RowDefinitions>

        <!-- TOP BAR -->
        <DockPanel Grid.Row="0" Background="#151821" LastChildFill="True" Padding="10,0">
            <TextBlock x:Name="ClockText"
                       Foreground="#8FA3B8" VerticalAlignment="Center"
                       FontWeight="SemiBold"/>
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                <ToggleButton x:Name="SurveillanceToggle"
                              Content="{Binding SurveillanceButtonText}"
                              IsChecked="{Binding IsSurveillanceOn, Mode=TwoWay}"
                              Margin="8,6" Padding="14,6"/>
            </StackPanel>
        </DockPanel>

        <!-- CONTENT -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="320"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- LEFT: Avatar + Stats -->
            <StackPanel Grid.Column="0" Margin="12">
                <Border CornerRadius="16" Background="#161a23" Padding="12" Margin="0,0,0,12">
                    <!-- ton avatar XAML existant si tu l’as ; sinon placeholder -->
                    <TextBlock Text="Avatar Virgil"
                               Foreground="#CDE3FF" Opacity="0.7"
                               HorizontalAlignment="Center" />
                </Border>

                <!-- Panneau de surveillance (visible seulement quand actif) -->
                <Border CornerRadius="12" Background="#161a23" Padding="12"
                        Visibility="{Binding IsSurveillanceOn, Converter={StaticResource BoolToVis}}">
                    <StackPanel>
                        <TextBlock Text="Surveillance" FontWeight="SemiBold" Foreground="#CDE3FF"
                                   Margin="0,0,0,8"/>
                        <StackPanel Orientation="Vertical">
                            <TextBlock Text="{Binding CpuTempText}" Foreground="#AFC6DA"/>
                            <ProgressBar Minimum="0" Maximum="100" Height="8" Value="{Binding CpuUsage}" Margin="0,4,0,8"/>

                            <TextBlock Text="{Binding GpuTempText}" Foreground="#AFC6DA"/>
                            <ProgressBar Minimum="0" Maximum="100" Height="8" Value="{Binding GpuUsage}" Margin="0,4,0,8"/>

                            <TextBlock Text="Mémoire" Foreground="#AFC6DA"/>
                            <ProgressBar Minimum="0" Maximum="100" Height="8" Value="{Binding MemUsage}" Margin="0,4,0,8"/>

                            <TextBlock Text="Disque" Foreground="#AFC6DA"/>
                            <ProgressBar Minimum="0" Maximum="100" Height="8" Value="{Binding DiskUsage}" Margin="0,4,0,0"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- RIGHT: Chat + Actions -->
            <Grid Grid.Column="1" Margin="12">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- CHAT (panneau custom) -->
                <Border CornerRadius="12" Background="#151821" Padding="10" Margin="0,0,0,10">
                    <controls:VirgilChatPanel x:Name="ChatArea"/>
                </Border>

                <!-- ACTIONS -->
                <UniformGrid Grid.Row="1" Columns="4" Margin="0,6,0,0">
                    <Button Content="Maintenance complète" Click="FullMaintenanceButton_Click" Margin="4" Padding="10"/>
                    <Button Content="Nettoyer TEMP" Click="CleanButton_Click" Margin="4" Padding="10"/>
                    <Button Content="Nettoyer navigateurs" Click="CleanBrowsersButton_Click" Margin="4" Padding="10"/>
                    <Button Content="Tout mettre à jour" Click="UpdateAllButton_Click" Margin="4" Padding="10"/>
                </UniformGrid>
            </Grid>
        </Grid>

        <!-- STATUS BAR -->
        <DockPanel Grid.Row="2" Background="#151821" LastChildFill="True" Padding="10,6">
            <TextBlock x:Name="StatusText" Foreground="#AFC6DA" VerticalAlignment="Center" />
            <ProgressBar x:Name="TaskProgress" DockPanel.Dock="Right" Width="280" Height="10"
                         Margin="10,0,0,0" Minimum="0" Maximum="100"/>
        </DockPanel>
    </Grid>
</Window>
