<Window x:Class="Virgil.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Virgil.App"
        xmlns:controls="clr-namespace:Virgil.App.Controls"
        mc:Ignorable="d"
        Title="Virgil Assistant"
        Width="1200"
        Height="800"
        WindowStartupLocation="CenterScreen"
        Background="#1E1E1E"
        Foreground="White">

    <Window.Resources>
        <Style x:Key="Padded" TargetType="FrameworkElement">
            <Setter Property="Margin" Value="6"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Bande supérieure -->
        <Border Grid.Row="0" Background="#2D2D30" Padding="10">
            <DockPanel LastChildFill="True">
                <TextBlock Text="VIRGIL SYSTEM ASSISTANT"
                           FontSize="22"
                           FontWeight="Bold"
                           Foreground="#00BFFF"
                           VerticalAlignment="Center"/>
            </DockPanel>
        </Border>

        <!-- Contenu principal -->
        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="12"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <!-- Zone de gauche -->
            <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <GroupBox Header="Maintenance" Foreground="White" Style="{StaticResource Padded}">
                        <StackPanel>
                            <Button Style="{StaticResource Padded}" Content="Maintenance rapide" Click="QuickMaintenanceButton_Click"/>
                            <Button Style="{StaticResource Padded}" Content="Maintenance complète" Click="FullMaintenanceButton_Click"/>
                            <Button Style="{StaticResource Padded}" Content="Nettoyage TEMP" Click="CleanButton_Click"/>
                            <Button Style="{StaticResource Padded}" Content="Nettoyage navigateurs" Click="CleanBrowsersButton_Click"/>
                            <Button Style="{StaticResource Padded}" Content="Nettoyage étendu" Click="CleanExtendedButton_Click"/>
                        </StackPanel>
                    </GroupBox>

                    <GroupBox Header="Mises à jour" Foreground="White" Style="{StaticResource Padded}">
                        <StackPanel>
                            <Button Style="{StaticResource Padded}" Content="MAJ Apps / Jeux" Click="UpdateButton_Click"/>
                            <Button Style="{StaticResource Padded}" Content="MAJ Pilotes" Click="DriverButton_Click"/>
                            <Button Style="{StaticResource Padded}" Content="Windows Update : Scan" Click="WindowsUpdateButton_Click"/>
                            <Button Style="{StaticResource Padded}" Content="Windows Update : Download" Click="WindowsUpdateDownloadButton_Click"/>
                            <Button Style="{StaticResource Padded}" Content="Windows Update : Install" Click="WindowsUpdateInstallButton_Click"/>
                            <Button Style="{StaticResource Padded}" Content="Windows Update : Restart" Click="WindowsUpdateRestartButton_Click"/>
                        </StackPanel>
                    </GroupBox>

                    <GroupBox Header="Analyse système" Foreground="White" Style="{StaticResource Padded}">
                        <StackPanel>
                            <Button Style="{StaticResource Padded}" Content="Démarrer / Arrêter Monitoring" Click="MonitorButton_Click"/>
                            <Button Style="{StaticResource Padded}" Content="Lire Températures" Click="ReadTempsButton_Click"/>
                            <Button Style="{StaticResource Padded}" Content="Top Processus RAM" Click="ProcessesButton_Click"/>
                            <StackPanel Orientation="Horizontal">
                                <TextBox x:Name="KillPidBox" Width="80" Style="{StaticResource Padded}" ToolTip="PID à tuer"/>
                                <Button Style="{StaticResource Padded}" Content="Tuer PID" Click="KillPidButton_Click"/>
                            </StackPanel>
                        </StackPanel>
                    </GroupBox>

                    <GroupBox Header="Services" Foreground="White" Style="{StaticResource Padded}">
                        <StackPanel>
                            <Button Style="{StaticResource Padded}" Content="Lister Services" Click="ListServicesButton_Click"/>
                            <StackPanel Orientation="Horizontal">
                                <TextBox x:Name="SvcNameBox" Width="180" Style="{StaticResource Padded}" ToolTip="Nom du service"/>
                                <Button Content="Start" Style="{StaticResource Padded}" Click="StartServiceButton_Click"/>
                                <Button Content="Stop" Style="{StaticResource Padded}" Click="StopServiceButton_Click"/>
                                <Button Content="Restart" Style="{StaticResource Padded}" Click="RestartServiceButton_Click"/>
                            </StackPanel>
                        </StackPanel>
                    </GroupBox>

                    <!-- ⚠️ & échappé -->
                    <GroupBox Header="Outils &amp; Journal" Foreground="White" Style="{StaticResource Padded}">
                        <StackPanel>
                            <Button Style="{StaticResource Padded}" Content="Copier journal" Click="CopyLogButton_Click"/>
                            <Button Style="{StaticResource Padded}" Content="Exporter journal" Click="ExportLogButton_Click"/>
                            <Button Style="{StaticResource Padded}" Content="Gestionnaire de périphériques" Click="OpenDeviceManagerButton_Click"/>
                            <Button Style="{StaticResource Padded}" Content="Nettoyage disque" Click="OpenDiskCleanupButton_Click"/>
                            <Button Style="{StaticResource Padded}" Content="Services Windows" Click="OpenServicesConsoleButton_Click"/>
                            <Button Style="{StaticResource Padded}" Content="Flush DNS" Click="FlushDnsButton_Click"/>
                        </StackPanel>
                    </GroupBox>
                </StackPanel>
            </ScrollViewer>

            <!-- Zone de droite -->
            <StackPanel Grid.Column="2">
                <controls:VirgilAvatar x:Name="AvatarControl"
                                       Width="320"
                                       Height="320"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Top"
                                       Margin="0,0,0,20"/>
                <ProgressBar x:Name="TaskProgress" Height="22" Minimum="0" Maximum="100" Margin="0,0,0,6"/>
                <TextBlock x:Name="StatusText" Text="Prêt."
                           FontSize="14"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,12"/>
                <TextBox x:Name="OutputBox"
                         FontFamily="Consolas"
                         FontSize="13"
                         Background="#111"
                         Foreground="#EEE"
                         IsReadOnly="True"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         VerticalScrollBarVisibility="Auto"
                         Height="300"/>
            </StackPanel>
        </Grid>

        <!-- Bas de fenêtre -->
        <Border Grid.Row="2" Background="#2D2D30" Padding="8">
            <DockPanel>
                <TextBlock Text="© Virgil System Tools" Foreground="Gray" HorizontalAlignment="Center"/>
            </DockPanel>
        </Border>
    </Grid>
</Window>
