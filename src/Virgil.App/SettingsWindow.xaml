<Window x:Class="Virgil.App.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Paramètres Virgil" Height="420" Width="520" WindowStartupLocation="CenterOwner">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height=""Auto"" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width=""*"" />
        </Grid.ColumnDefinitions>

        <StackPanel Spacing=""8"">
            <TextBlock Text=""Seuils & Fréquences"" FontWeight=""Bold"" Margin=""0,0,0,8""/>
            <UniformGrid Columns="2" Rows="6" Margin="0,0,0,8" HorizontalAlignment="Stretch">
                <TextBlock Text=""CPU Warn (%)"" VerticalAlignment=""Center""/>
                <TextBox x:Name=""CpuWarnBox""/>
                <TextBlock Text=""GPU Warn (%)"" VerticalAlignment=""Center""/>
                <TextBox x:Name=""GpuWarnBox""/>
                <TextBlock Text=""RAM Warn (%)"" VerticalAlignment=""Center""/>
                <TextBox x:Name=""RamWarnBox""/>
                <TextBlock Text=""Temp Warn (°C)"" VerticalAlignment=""Center""/>
                <TextBox x:Name=""TempWarnBox""/>
                <TextBlock Text=""Temp Alert (°C)"" VerticalAlignment=""Center""/>
                <TextBox x:Name=""TempAlertBox""/>
                <TextBlock Text=""Punchlines (s)"" VerticalAlignment=""Center""/>
                <TextBox x:Name=""PunchFreqBox""/>
                <TextBlock Text=""Mood (s)"" VerticalAlignment=""Center""/>
                <TextBox x:Name=""MoodFreqBox""/>
            </UniformGrid>

            <TextBlock Text=""Style"" FontWeight=""Bold"" Margin=""0,8,0,8""/>
            <UniformGrid Columns=""2"">
                <TextBlock Text=""Ton"" VerticalAlignment=""Center""/>
                <ComboBox x:Name=""ToneBox"">
                    <ComboBoxItem Content=""humor"" IsSelected=""True""/>
                    <ComboBoxItem Content=""pro""/>
                </ComboBox>
                <TextBlock Text=""Thème"" VerticalAlignment=""Center""/>
                <ComboBox x:Name=""ThemeBox"">
                    <ComboBoxItem Content=""dark"" IsSelected=""True""/>
                    <ComboBoxItem Content=""light""/>
                </ComboBox>
            </UniformGrid>
        </StackPanel>

        <StackPanel Grid.Row=""1"" Orientation=""Horizontal"" HorizontalAlignment=""Right"" Spacing=""8"">
            <Button x:Name=""BtnCancel"" Content=""Annuler"" MinWidth=""100""/>
            <Button x:Name=""BtnSave"" Content=""Enregistrer"" MinWidth=""120""/>
        </StackPanel>
    </Grid>
</Window>
