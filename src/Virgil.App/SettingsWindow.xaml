<Window x:Class="Virgil.App.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Paramètres Virgil" Height="520" Width="720"
        Background="#111318"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize">

    <!-- Un SEUL enfant direct de Window : un Grid -->
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>   <!-- Header -->
            <RowDefinition Height="*"/>      <!-- Corps -->
            <RowDefinition Height="Auto"/>   <!-- Pied -->
        </Grid.RowDefinitions>

        <!-- ====== HEADER ====== -->
        <DockPanel Grid.Row="0" LastChildFill="False">
            <TextBlock Text="Paramètres" FontSize="20" FontWeight="Bold"
                       Foreground="White" VerticalAlignment="Center" />
        </DockPanel>

        <!-- ====== CORPS ====== -->
        <Border Grid.Row="1" CornerRadius="10" Background="#1D232A" Padding="16" Margin="0,12,0,12">
            <!-- Un SEUL conteneur à l'intérieur du Border -->
            <StackPanel>
                <TextBlock Text="Seuils & Options" Foreground="White" FontWeight="SemiBold" Margin="0,0,0,10"/>

                <UniformGrid Rows="3" Columns="2" Margin="0,0,0,12">
                    <TextBlock Text="Seuil CPU (%)" Foreground="White" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBox x:Name="CpuThresholdBox" Text="85" />

                    <TextBlock Text="Seuil GPU (%)" Foreground="White" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBox x:Name="GpuThresholdBox" Text="85" />

                    <TextBlock Text="Seuil Température (°C)" Foreground="White" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBox x:Name="TempThresholdBox" Text="85" />
                </UniformGrid>

                <Separator Margin="0,8,0,8"/>

                <StackPanel Orientation="Horizontal">
                    <Button x:Name="OpenConfigBtn" Content="Ouvrir le dossier de configuration"
                            Height="32" Margin="0,0,8,0"
                            Click="OpenConfigBtn_Click"/>
                    <Button x:Name="SaveBtn" Content="Enregistrer"
                            Height="32" Click="SaveBtn_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- ====== PIED ====== -->
        <DockPanel Grid.Row="2">
            <TextBlock Text="Virgil — paramètres locaux utilisateur"
                       Foreground="#B0B0B0" FontSize="12"/>
        </DockPanel>
    </Grid>
</Window>
