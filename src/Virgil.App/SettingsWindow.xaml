<Window x:Class="Virgil.App.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Paramètres Virgil" Height="420" Width="520" WindowStartupLocation="CenterOwner">
  <Grid Margin="26">
    <Grid.RowDefinitions>
      <RowDefinition Height="*" />
      <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>
    <ScrollViewer Grid.Row="0">
      <!-- contenu de la fenêtre -->
    </ScrollViewer>
    <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
      <Button Content="Enregistrer" Width="110" Height="32" Margin="0,10,10,0" Background="#007ACC" Foreground="White"/>
      <Button Content="Annuler"     Width="90"  Height="32" Margin="0,10,0,0"  Background="#444"    Foreground="White"/>
    </StackPanel>
  </Grid>
</Window>
