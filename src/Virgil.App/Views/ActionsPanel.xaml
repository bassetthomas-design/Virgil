<UserControl x:Class="Virgil.App.Views.ActionsPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Height="Auto" Width="220">
    <StackPanel Margin="8">
        <Button Content="Surveillance ON/OFF" Margin="0,0,0,8" Command="{Binding SurveillanceCommand}"/>
        <Button Content="Maintenance complète" Margin="0,0,0,8" Command="{Binding MaintenanceCommand}"/>
        <Button Content="Nettoyage intelligent" Margin="0,0,0,8" Command="{Binding SmartCleanupCommand}"/>
        <Button Content="Nettoyer navigateurs" Margin="0,0,0,8" Command="{Binding CleanBrowsersCommand}"/>
        <Button Content="Tout mettre à jour" Margin="0,0,0,8" Command="{Binding UpdateAllCommand}"/>
        <Button Content="Defender (MAJ + Scan)" Margin="0,0,0,8" Command="{Binding DefenderCommand}"/>
        <Button Content="Ouvrir configuration" Command="{Binding OpenConfigCommand}"/>
    </StackPanel>
</UserControl>
