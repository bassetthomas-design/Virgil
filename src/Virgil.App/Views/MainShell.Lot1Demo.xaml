<Window x:Class="Virgil.App.Views.MainShellLot1Demo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace=Virgil.App.ViewModels"
        mc:Ignorable="d"
        Title="Virgil – Demo Lot 1"
        Width="1120" Height="640"
        WindowStartupLocation="CenterScreen"
        Background="#0B0C10">
    <Window.DataContext>
        <vm:MainShellLot1DemoViewModel />
    </Window.DataContext>

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Padding="8" Margin="0,0,0,8" CornerRadius="6"
                Background="#151821">
            <DockPanel>
                <TextBlock Text="VIRGIL" FontSize="18" FontWeight="Bold"
                           Foreground="#E5E9F0" DockPanel.Dock="Left"/>

                <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" Margin="8,0,0,0">
                    <TextBlock Text="Surveillance" VerticalAlignment="Center" Foreground="#E5E9F0"/>
                    <ToggleButton Width="60" Height="24" VerticalAlignment="Center"
                                  IsChecked="{Binding IsMonitoringEnabled}">
                        <TextBlock Text="ON" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </ToggleButton>
                    <TextBlock Text="|" Foreground="#4C566A" VerticalAlignment="Center" Margin="8,0,0,0"/>
                    <TextBlock Text="{Binding CurrentTime}" FontFamily="Consolas" FontSize="14"
                               Foreground="#E5E9F0" VerticalAlignment="Center" Margin="4,0,0,0"/>
                </StackPanel>
            </DockPanel>
        </Border>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="320"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Margin="0,0,8,0">
                <Border Height="220" CornerRadius="8" Background="#151821" Padding="12">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" >
                        <Ellipse Width="120" Height="120" Fill="#3B4252"/>
                        <TextBlock Text="{Binding Mood}" Foreground="#E5E9F0" HorizontalAlignment="Center" Margin="0,8,0,0"/>
                    </StackPanel>
                </Border>

                <Border CornerRadius="8" Background="#151821" Padding="12" Margin="0,8,0,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="CPU" Grid.Row="0" Grid.Column="0" Foreground="#E5E9F0"/>
                        <TextBlock Text="{Binding CpuUsage}" Grid.Row="0" Grid.Column="1" Foreground="#E5E9F0"/>

                        <TextBlock Text="GPU" Grid.Row="1" Grid.Column="0" Margin="0,4,0,0" Foreground="#E5E9F0"/>
                        <TextBlock Text="{Binding GpuUsage}" Grid.Row="1" Grid.Column="1" Margin="0,4,0,0" Foreground="#E5E9F0"/>

                        <TextBlock Text="RAM" Grid.Row="2" Grid.Column="0" Margin="0,4,0,0" Foreground="#E5E9F0"/>
                        <TextBlock Text="{Binding RamUsage}" Grid.Row="2" Grid.Column="1" Margin="0,4,0,0" Foreground="#E5E9F0"/>

                        <TextBlock Text="Disque" Grid.Row="3" Grid.Column="0" Margin="0,4,0,0" Foreground="#E5E9F0"/>
                        <TextBlock Text="{Binding DiskUsage}" Grid.Row="3" Grid.Column="1" Margin="0,4,0,0" Foreground="#E5E9F0"/>
                    </Grid>
                </Border>

                <Border CornerRadius="8" Background="#151821" Padding="12" Margin="0,8,0,0">
                    <StackPanel>
                        <TextBlock Text="Températures" Foreground="#E5E9F0" FontWeight="Bold" Margin="0,0,0,4"/>
                        <TextBlock Text="CPU: {Binding CpuTemp}" Foreground="#E5E9F0"/>
                        <TextBlock Text="GPU: {Binding GpuTemp}" Foreground="#E5E9F0"/>
                        <TextBlock Text="Disque: {Binding DiskTemp}" Foreground="#E5E9F0"/>
                    </StackPanel>
                </Border>
            </StackPanel>

            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" CornerRadius="8" Background="#151821" Padding="12" Margin="0,0,0,8">
                    <UniformGrid Columns="3" Rows="2">
                        <Button Margin="4" Content="Maintenance complète"/>
                        <Button Margin="4" Content="Nettoyage intelligent"/>
                        <Button Margin="4" Content="Nettoyer navigateurs"/>
                        <Button Margin="4" Content="Tout mettre à jour"/>
                        <Button Margin="4" Content="Defender (MAJ + Scan)"/>
                        <Button Margin="4" Content="Ouvrir configuration"/>
                    </UniformGrid>
                </Border>

                <Border Grid.Row="1" CornerRadius="8" Background="#151821" Padding="12">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <TextBlock Text="[Virgil] Démo Lot 1 chargée." Foreground="#E5E9F0" Margin="0,0,0,4"/>
                            <TextBlock Text="Interface squelette opérationnelle (horloge, surveillance, panneaux)." Foreground="#E5E9F0" Margin="0,0,0,4"/>
                            <TextBlock Text="Les données sont simulées pour l’instant. Les services réels viendront dans les lots suivants." Foreground="#E5E9F0" TextWrapping="Wrap"/>
                        </StackPanel>
                    </ScrollViewer>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Window>