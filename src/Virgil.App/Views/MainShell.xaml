<Window x:Class="Virgil.App.Views.MainShell"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:Virgil.App.Views"
        xmlns:controls="clr-namespace:Virgil.App.Controls"
        Title="Virgil" Height="720" Width="1080">
<Grid Background="{StaticResource App.BackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="300"/>
        </Grid.ColumnDefinitions>

        <!-- Toolbar -->
        <DockPanel Grid.Row="0" Grid.ColumnSpan="3" Background="{StaticResource App.PanelBrush}">
            <TextBlock Text="VIRGIL" FontWeight="Bold" FontSize="16" Margin="8,0" VerticalAlignment="Center"/>
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" HorizontalAlignment="Right" Margin="0,0,8,0">
                <Button Content="ParamÃ¨tres" Click="OnOpenSettings" Margin="4,0"/>
            <TextBlock x:Name="ClockTextBlock" Margin="0,0,16,0" VerticalAlignment="Center" FontFamily="Consolas" FontSize="14" Text="--:--:--" />
                <Button Content="Mini HUD" Click="OnHudToggled" Margin="4,0"/>d
            </StackPanel>
        </DockPanel>

        <!-- Actions Panel -->
        <views:ActionsPanel Grid.Row="1" Grid.Column="0" DataContext="{Binding Actions}"/>

        <!-- Avatar and metrics -->
        <StackPanel Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Background="{StaticResource App.PanelBrush}">
            <controls:AvatarView Width="192" Height="192" DataContext="{Binding Monitoring}"/>
            <views:MetricsBar Width="200" Margin="0,8,0,0" DataContext="{Binding Monitoring}"/>
        </StackPanel>

        <!-- Chat Panel -->
        <views:ChatView Grid.Row="1" Grid.Column="2" DataContext="{Binding Chat}"/>

        <!-- Status bar -->
        <TextBlock Grid.Row="2" Grid.ColumnSpan="3" Text="{Binding StatusText}" Padding="8,0" VerticalAlignment="Center"/>
    </Grid>
</Window>
