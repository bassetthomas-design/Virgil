<Window x:Class="Virgil.App.Views.MainShell"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:Virgil.App.Views"
        xmlns:controls="clr-namespace:Virgil.App.Controls"
        Title="Virgil" Height="760" Width="1200" WindowStartupLocation="CenterScreen">
    <Grid Background="{DynamicResource AppBackgroundBrush}" Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="320" />
        </Grid.ColumnDefinitions>

        <!-- Toolbar -->
        <Border Grid.Row="0" Grid.ColumnSpan="3" Background="{DynamicResource PanelBackgroundBrush}" CornerRadius="8" Padding="10" Margin="0,0,0,10">
            <DockPanel>
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Left" VerticalAlignment="Center">
                    <TextBlock Text="VIRGIL" FontWeight="Bold" FontSize="18" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" HorizontalAlignment="Right">
                    <TextBlock x:Name="ClockTextBlock" VerticalAlignment="Center" FontFamily="Consolas" FontSize="14" Text="--:--:--" />
                    <Button x:Name="HudToggleButton" Content="Mini HUD" Click="OnHudToggled" Margin="8,0,0,0" />
                    <Button x:Name="MonitoringToggleButton" Content="Désactiver la surveillance" Click="OnMonitoringToggled" Margin="8,0,0,0" />
                    <Button Content="Paramètres" Click="OnOpenSettings" Margin="8,0,0,0" />
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- Actions Panel -->
        <Border Grid.Row="1" Grid.Column="0" Background="{DynamicResource PanelBackgroundBrush}" CornerRadius="10" Padding="8" Margin="0,0,10,10">
            <views:ActionsPanel DataContext="{Binding Actions}" />
        </Border>

        <!-- Chat Panel takes the central space -->
        <Border Grid.Row="1" Grid.Column="1" Background="{DynamicResource CardBackgroundBrush}" CornerRadius="12" Padding="0" Margin="0,0,10,10" BorderBrush="{DynamicResource PanelBackgroundBrush}" BorderThickness="1">
            <views:ChatView DataContext="{Binding Chat}" />
        </Border>

        <!-- Avatar and metrics -->
        <Border Grid.Row="1" Grid.Column="2" Background="{DynamicResource PanelBackgroundBrush}" CornerRadius="10" Padding="14" Margin="0,0,0,10">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <controls:AvatarView Width="192" Height="192" DataContext="{Binding Monitoring}" Source="{Binding AvatarSource}" />
                <views:MetricsBar Width="220" DataContext="{Binding Monitoring}" Margin="0,8,0,0" />
            </StackPanel>
        </Border>

        <!-- Status bar -->
        <Border Grid.Row="2" Grid.ColumnSpan="3" Background="{DynamicResource PanelBackgroundBrush}" CornerRadius="8" Padding="10,6" Margin="0,10,0,0">
            <TextBlock Text="{Binding StatusText}" VerticalAlignment="Center" />
        </Border>
    </Grid>
</Window>
