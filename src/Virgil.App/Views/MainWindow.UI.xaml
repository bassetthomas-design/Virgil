<Window x:Class="Virgil.App.Views.MainWindowUI"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Virgil.App.Views"
        xmlns:vm="clr-namespace:Virgil.App.ViewModels"
        xmlns:controls="clr-namespace:Virgil.App.Controls"
        mc:Ignorable="d"
        Title="Virgil — UI Preview" Height="820" Width="1280"
        WindowStartupLocation="CenterScreen"
        Background="#0F1116">

    <Window.DataContext>
        <vm:DashboardViewModel/>
    </Window.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="56"/>   <!-- Top bar -->
            <RowDefinition Height="*"/>    <!-- Body -->
        </Grid.RowDefinitions>

        <!-- Top Bar -->
        <DockPanel Grid.Row="0" Background="#151821" LastChildFill="True" Margin="0,0,0,8">
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Left" VerticalAlignment="Center" Margin="16,0">
                <TextBlock Text="Virgil" FontWeight="Bold" Foreground="#D6E2FF" FontSize="16" Margin="0,0,12,0"/>
                <Separator Width="1" Margin="8,0" Opacity=".2"/>
                <ToggleButton x:Name="SurvToggle"
                              Width="150" Height="28"
                              IsChecked="{Binding IsSurveillanceOn, Mode=TwoWay}"
                              Content="{Binding SurveillanceLabel}"
                              Margin="12,0,0,0"/>
            </StackPanel>
            <TextBlock Text="{Binding Clock}"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Center"
                       Margin="0,0,16,0"
                       Foreground="#AAB4CF" FontSize="14" />
        </DockPanel>

        <!-- Body -->
        <Grid Grid.Row="1" Margin="16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="380"/>   <!-- Left panel -->
                <ColumnDefinition Width="12"/>
                <ColumnDefinition Width="*"/>     <!-- Chat + Actions -->
            </Grid.ColumnDefinitions>

            <!-- Left panel -->
            <Border Grid.Column="0" Padding="16" CornerRadius="12" Background="#151821">
                <StackPanel>
                    <controls:AvatarControl Mood="{Binding Mood}" Height="220" />
                    <TextBlock Text="{Binding MoodLabel}" Foreground="#AAB4CF" Margin="0,8,0,12"/>

                    <!-- Gauges -->
                    <UniformGrid Columns="2" Rows="3" Margin="0,8,0,0">
                        <StackPanel Margin="8">
                            <TextBlock Text="CPU" Foreground="#D6E2FF"/>
                            <ProgressBar Value="{Binding CpuUsage}" Height="8"/>
                            <TextBlock Text="{Binding CpuTempText}" Foreground="{Binding CpuTempBrush}"/>
                        </StackPanel>
                        <StackPanel Margin="8">
                            <TextBlock Text="GPU" Foreground="#D6E2FF"/>
                            <ProgressBar Value="{Binding GpuUsage}" Height="8"/>
                            <TextBlock Text="{Binding GpuTempText}" Foreground="{Binding GpuTempBrush}"/>
                        </StackPanel>
                        <StackPanel Margin="8">
                            <TextBlock Text="RAM" Foreground="#D6E2FF"/>
                            <ProgressBar Value="{Binding RamUsage}" Height="8"/>
                            <TextBlock Text="{Binding RamText}" Foreground="#AAB4CF"/>
                        </StackPanel>
                        <StackPanel Margin="8">
                            <TextBlock Text="Disque" Foreground="#D6E2FF"/>
                            <ProgressBar Value="{Binding DiskUsage}" Height="8"/>
                            <TextBlock Text="{Binding DiskTempText}" Foreground="{Binding DiskTempBrush}"/>
                        </StackPanel>
                    </UniformGrid>
                </StackPanel>
            </Border>

            <!-- Chat + Actions -->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>   <!-- Chat -->
                    <RowDefinition Height="140"/> <!-- Actions -->
                </Grid.RowDefinitions>

                <!-- Chat -->
                <Border Grid.Row="0" Padding="12" CornerRadius="12" Background="#151821" Margin="0,0,0,12">
                    <ItemsControl ItemsSource="{Binding Chat}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border CornerRadius="8" Padding="8" Margin="0,6"
                                        Background="{Binding BubbleBrush}">
                                    <TextBlock Text="{Binding Text}" TextWrapping="Wrap"/>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Border>

                <!-- Actions -->
                <Border Grid.Row="1" Padding="12" CornerRadius="12" Background="#151821">
                    <WrapPanel ItemHeight="36" ItemWidth="220">
                        <Button Content="Maintenance complète" Command="{Binding CmdMaintenance}" Margin="6"/>
                        <Button Content="Nettoyage intelligent" Command="{Binding CmdSmartClean}" Margin="6"/>
                        <Button Content="Nettoyer navigateurs" Command="{Binding CmdBrowserClean}" Margin="6"/>
                        <Button Content="Tout mettre à jour" Command="{Binding CmdUpdateAll}" Margin="6"/>
                        <Button Content="Defender (MAJ + Scan)" Command="{Binding CmdDefender}" Margin="6"/>
                        <Button Content="Ouvrir configuration" Command="{Binding CmdOpenConfig}" Margin="6"/>
                    </WrapPanel>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Window>
