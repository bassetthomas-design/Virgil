<?xml version="1.0" encoding="utf-8"?>
<!-- MainWindow.UI.xaml (corrigé - suppression de ColumnSpacing/RowSpacing sur UniformGrid) -->
<Window x:Class="Virgil.App.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:Virgil.App.Controls"
        mc:Ignorable="d"
        Title="Virgil" Height="720" Width="1200"
        Background="#0E1117"
        WindowStartupLocation="CenterScreen"
        FontFamily="Segoe UI">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="56"/>   <!-- Top bar -->
            <RowDefinition Height="*"/>    <!-- Content -->
            <RowDefinition Height="28"/>   <!-- Status bar -->
        </Grid.RowDefinitions>

        <!-- Top bar -->
        <Border Grid.Row="0" Background="#121621">
            <Grid Margin="12,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="{Binding TitleText}"
                           VerticalAlignment="Center"
                           Foreground="#D6E2FF"
                           FontSize="16" FontWeight="SemiBold"/>

                <ToggleButton Grid.Column="1"
                              Margin="12,0"
                              VerticalAlignment="Center"
                              Width="180" Height="28"
                              Content="{Binding SurveillanceToggleText}"
                              IsChecked="{Binding IsSurveillanceOn}"
                              Click="SurveillanceToggle_Click"/>

                <TextBlock Grid.Column="2"
                           VerticalAlignment="Center"
                           Foreground="#9FB0D9"
                           FontSize="14"
                           Text="{Binding ClockText}"/>
            </Grid>
        </Border>

        <!-- Content -->
        <Grid Grid.Row="1" Margin="16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="380"/>   <!-- Left panel -->
                <ColumnDefinition Width="12"/>
                <ColumnDefinition Width="*"/>     <!-- Chat + Actions -->
            </Grid.ColumnDefinitions>

            <!-- Left panel -->
            <Border Grid.Column="0" Padding="16" CornerRadius="12" Background="#151821">
                <StackPanel>
                    <!-- Avatar: pas de propriété Mood (inexistante) -->
                    <controls:AvatarControl Height="220" />
                    <TextBlock Text="{Binding MoodLabel}" Foreground="#AAB4CF" Margin="0,8,0,12"/>

                    <!-- Gauges -->
                    <UniformGrid Columns="2" Rows="3" Margin="0,8,0,0">
                        <StackPanel Margin="8">
                            <TextBlock Text="CPU" Foreground="#D6E2FF"/>
                            <ProgressBar Value="{Binding CpuUsage}" Height="8"/>
                            <TextBlock Text="{Binding CpuTempText}" Foreground="{Binding CpuTempBrush}"/>
                        </StackPanel>

                        <StackPanel Margin="8">
                            <TextBlock Text="GPU" Foreground="#D6E2FF"/>
                            <ProgressBar Value="{Binding GpuUsage}" Height="8"/>
                            <TextBlock Text="{Binding GpuTempText}" Foreground="{Binding GpuTempBrush}"/>
                        </StackPanel>

                        <StackPanel Margin="8">
                            <TextBlock Text="RAM" Foreground="#D6E2FF"/>
                            <ProgressBar Value="{Binding RamUsage}" Height="8"/>
                            <TextBlock Text="{Binding RamText}" Foreground="#AAB4CF"/>
                        </StackPanel>

                        <StackPanel Margin="8">
                            <TextBlock Text="Disque" Foreground="#D6E2FF"/>
                            <ProgressBar Value="{Binding DiskUsage}" Height="8"/>
                            <TextBlock Text="{Binding DiskText}" Foreground="#AAB4CF"/>
                        </StackPanel>
                    </UniformGrid>
                </StackPanel>
            </Border>

            <!-- Chat + Actions -->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>   <!-- Chat -->
                    <RowDefinition Height="160"/> <!-- Actions -->
                </Grid.RowDefinitions>

                <!-- Chat panel -->
                <Border Grid.Row="0" Padding="12" CornerRadius="12" Background="#0F1420">
                    <ItemsControl ItemsSource="{Binding ChatMessages}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Margin="0,6"
                                        Padding="10"
                                        CornerRadius="8"
                                        Background="{Binding BubbleBrush}">
                                    <TextBlock Text="{Binding Text}"
                                               TextWrapping="Wrap"
                                               Foreground="White"/>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Border>

                <!-- Actions -->
                <Border Grid.Row="1" Margin="0,12,0,0" Padding="12" CornerRadius="12" Background="#121826">
                    <!-- Style local: marge uniforme pour tous les boutons -->
                    <Border.Resources>
                        <Style TargetType="Button">
                            <Setter Property="Margin" Value="5"/>
                            <Setter Property="Height" Value="36"/>
                        </Style>
                    </Border.Resources>

                    <!-- WPF UniformGrid ne supporte pas ColumnSpacing/RowSpacing -->
                    <UniformGrid Columns="3" Rows="2">
                        <Button Content="Maintenance complète" Click="MaintenanceComplete_Click"/>
                        <Button Content="Nettoyage intelligent" Click="CleanSmart_Click"/>
                        <Button Content="Nettoyer navigateurs" Click="CleanBrowsers_Click"/>
                        <Button Content="Tout mettre à jour" Click="UpdateAll_Click"/>
                        <Button Content="Defender (MAJ + Scan)" Click="Defender_Click"/>
                        <Button Content="Ouvrir configuration" Click="OpenConfig_Click"/>
                    </UniformGrid>
                </Border>
            </Grid>
        </Grid>

        <!-- Status bar -->
        <Border Grid.Row="2" Background="#0D121C">
            <Grid Margin="10,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock VerticalAlignment="Center" Foreground="#8FA3C8"
                           Text="{Binding StatusText}"/>
                <TextBlock Grid.Column="1" VerticalAlignment="Center" Foreground="#8FA3C8"
                           Text="{Binding FooterText}"/>
            </Grid>
        </Border>
    </Grid>
</Window>
