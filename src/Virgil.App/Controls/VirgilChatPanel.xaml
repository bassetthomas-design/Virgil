<UserControl x:Class="Virgil.App.Controls.VirgilChatPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" d:DesignHeight="300" d:DesignWidth="400"
             Background="Transparent">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Liste des messages -->
        <ScrollViewer x:Name="Scroller"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled">
            <ItemsControl x:Name="List"
                          Margin="0"
                          ItemsSource="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=ItemsSource}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate DataType="{x:Type sys:Object}" xmlns:sys="clr-namespace:System;assembly=mscorlib">
                        <!-- Bulle : on s’attend à un objet avec .Text et .BubbleBrush (ChatMessage) -->
                        <Border x:Name="Bubble"
                                Background="{Binding BubbleBrush}"
                                CornerRadius="10"
                                Padding="10" Margin="6,4"
                                SnapsToDevicePixels="True">
                            <TextBlock Text="{Binding Text}"
                                       Foreground="White"
                                       FontSize="14"
                                       TextWrapping="WrapWithOverflow"/>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Couche particules (effet “Thanos”) -->
        <Canvas x:Name="DustLayer" IsHitTestVisible="False"
                Panel.ZIndex="10"/>
    </Grid>
</UserControl>
