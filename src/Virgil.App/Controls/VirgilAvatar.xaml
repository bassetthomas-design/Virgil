<UserControl x:Class="Virgil.App.Controls.VirgilAvatar"
             x:Name="Root"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="200" d:DesignWidth="200">
    <Grid>
        <!-- Image de l’humeur (sprite/PNG) -->
        <Image x:Name="MoodImage"
               Source="{Binding ElementName=Root, Path=MoodGlyph}"
               Stretch="Uniform"
               SnapsToDevicePixels="True"
               RenderOptions.BitmapScalingMode="HighQuality"/>

        <!-- Overlay couleur selon l’humeur -->
        <Rectangle x:Name="MoodOverlay"
                   Fill="{Binding ElementName=Root, Path=MoodOverlayBrush}"
                   IsHitTestVisible="False"/>
    </Grid>
</UserControl>
