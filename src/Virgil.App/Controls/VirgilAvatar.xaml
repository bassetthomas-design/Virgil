<UserControl x:Class="Virgil.App.Controls.VirgilAvatar" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" d:DesignHeight="220" d:DesignWidth="220">
  <Grid>
    <Ellipse Width="200" Height="200" Fill="{Binding FaceFill, RelativeSource={RelativeSource AncestorType=UserControl}}" Stroke="White" StrokeThickness="6"/>
    <!-- Eyes -->
    <Grid Width="120" Height="50" HorizontalAlignment="Center" VerticalAlignment="Center">
      <Ellipse Width="26" Height="26" Fill="White" HorizontalAlignment="Left"/>
      <Ellipse Width="26" Height="26" Fill="White" HorizontalAlignment="Right"/>
    </Grid>
  </Grid>
</UserControl>
