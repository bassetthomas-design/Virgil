<UserControl x:Class="Virgil.App.Controls.VirgilAvatar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="160" d:DesignWidth="240">

    <Grid>
        <!-- Orbe -->
        <Ellipse x:Name="Orb"
                 Width="56" Height="56"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Top"
                 Fill="{Binding AvatarBrush}">
            <Ellipse.Effect>
                <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.6"/>
            </Ellipse.Effect>
            <Ellipse.RenderTransform>
                <ScaleTransform x:Name="Pulse" ScaleX="1.0" ScaleY="1.0"/>
            </Ellipse.RenderTransform>
        </Ellipse>

        <!-- Message -->
        <TextBlock Text="{Binding Message}"
                   Margin="72,0,8,28"
                   VerticalAlignment="Top"
                   TextWrapping="Wrap"
                   FontSize="13"
                   Foreground="#DDFFFFFF"/>

        <!-- Progression -->
        <ProgressBar Minimum="0" Maximum="100"
                     Value="{Binding ProgressValue}"
                     IsIndeterminate="{Binding IsIndeterminate}"
                     Height="10"
                     VerticalAlignment="Bottom"/>
    </Grid>

    <!-- ⚠️ Les triggers doivent être ici, au niveau du UserControl -->
    <UserControl.Triggers>
        <EventTrigger RoutedEvent="Loaded">
            <BeginStoryboard>
                <Storyboard RepeatBehavior="Forever" AutoReverse="True">
                    <DoubleAnimation Storyboard.TargetName="Pulse"
                                     Storyboard.TargetProperty="ScaleX"
                                     From="1.0" To="1.08"
                                     Duration="0:0:1.8"/>
                    <DoubleAnimation Storyboard.TargetName="Pulse"
                                     Storyboard.TargetProperty="ScaleY"
                                     From="1.0" To="1.08"
                                     Duration="0:0:1.8"/>
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </UserControl.Triggers>

</UserControl>
