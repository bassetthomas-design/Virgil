<Application x:Class="Virgil.App.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:Virgil.App.Controls">
  <Application.Resources>

    <!-- Converters -->
    <controls:ColorToBrushConverter x:Key="ColorToBrushConverter"/>
    <controls:EyeSeparationToMarginConverter x:Key="EyeSeparationToMarginConverter"/>

    <!-- Styles chat -->
    <Style x:Key="VirgilBubble" TargetType="Border">
      <Setter Property="Background" Value="#2C3E50"/>
      <Setter Property="CornerRadius" Value="10"/>
      <Setter Property="Padding" Value="10"/>
      <Setter Property="Margin" Value="0,6,0,6"/>
      <Setter Property="Effect">
        <Setter.Value>
          <DropShadowEffect BlurRadius="8" ShadowDepth="2" Opacity="0.35"/>
        </Setter.Value>
      </Setter>
    </Style>

    <!-- Simple BooleanToVisibility (au cas oÃ¹) -->
    <BooleanToVisibilityConverter x:Key="BoolToVis"/>
  </Application.Resources>
</Application>
