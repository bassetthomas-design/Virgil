<Application x:Class="Virgil.App.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:Virgil.App.Controls"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <!-- Converters globaux -->
            <BooleanToVisibilityConverter x:Key="BoolToVis" />
            <controls:ColorToBrushConverter x:Key="ColorToBrushConverter" />
            <controls:EyeSeparationToMarginConverter x:Key="EyeSeparationToMarginConverter" />

            <!-- Effet ombre pour lâ€™avatar -->
            <DropShadowEffect x:Key="DropShadowEffect"
                              Color="#001020"
                              ShadowDepth="0"
                              BlurRadius="25"
                              Opacity="0.6"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
