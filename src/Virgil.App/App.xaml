<Application x:Class="Virgil.App.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:Virgil.App.Controls"
             StartupUri="MainWindow.xaml">
  <Application.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries/>
      <!-- Converters globaux -->
      <BooleanToVisibilityConverter x:Key="BoolToVis" />
      <controls:ColorToBrushConverter x:Key="ColorToBrushConverter" />
      <controls:EyeSeparationToMarginConverter x:Key="EyeSeparationToMarginConverter" />
    </ResourceDictionary>
  </Application.Resources>
</Application>
