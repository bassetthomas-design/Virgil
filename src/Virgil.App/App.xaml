<Application x:Class="Virgil.App.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Startup="Application_Startup">
    <Application.Resources>
        <ResourceDictionary>
            <!-- Thème Avatar -->
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Themes/AvatarTheme.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <!-- Couleurs globales thème sombre -->
            <SolidColorBrush x:Key="App.BackgroundBrush" Color="#0A0A0D" />
            <SolidColorBrush x:Key="App.PanelBrush" Color="#1E1E2E" />
            <SolidColorBrush x:Key="App.BorderBrush" Color="#25253A" />
            <SolidColorBrush x:Key="App.AccentBrush" Color="#4FD1C5" />
            <SolidColorBrush x:Key="App.AccentBrushSoft" Color="#CFFFEA" />
            <SolidColorBrush x:Key="App.TextPrimaryBrush" Color="#FFFFFF" />
            <SolidColorBrush x:Key="App.TextSecondaryBrush" Color="#C0C4D4" />
            <SolidColorBrush x:Key="App.WarningBrush" Color="#F6AD55" />
            <SolidColorBrush x:Key="App.ErrorBrush" Color="#FC8181" />
            <SolidColorBrush x:Key="App.SuccessBrush" Color="#68D391" />
            <!-- Style global des fenêtres -->
            <Style TargetType="Window">
                <Setter Property="Background" Value="{StaticResource App.BackgroundBrush}" />
                <Setter Property="Foreground" Value="{StaticResource App.TextPrimaryBrush}" />
            </Style>
            <!-- Style global du texte -->
            <Style TargetType="TextBlock">
                <Setter Property="Foreground" Value="{StaticResource App.TextPrimaryBrush}" />
                <Setter Property="TextWrapping" Value="Wrap" />
            </Style>
            <!-- Style global des boutons -->
            <Style TargetType="Button">
                <Setter Property="Foreground" Value="{StaticResource App.TextPrimaryBrush}" />
                <Setter Property="Background" Value="{StaticResource App.PanelBrush}" />
                <Setter Property="BorderBrush" Value="{StaticResource App.BorderBrush}" />
                <Setter Property="BorderThickness" Value="1" />
                <Setter Property="Padding" Value="6,4" />
                <Setter Property="Margin" Value="0,2,0,2" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
