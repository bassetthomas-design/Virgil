<Application x:Class="Virgil.App.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Startup="Application_Startup">
    <Application.Resources>
        <!-- Dark theme resources -->
        <SolidColorBrush x:Key="App.BackgroundBrush" Color="#0A0A0D"/>
        <SolidColorBrush x:Key="App.PanelBrush" Color="#1E1E2E"/>
        <SolidColorBrush x:Key="App.ForegroundBrush" Color="#F0F0F0"/>
        <SolidColorBrush x:Key="App.SubtleBrush" Color="#2B2B37"/>

        <!-- Default text style -->
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="{DynamicResource App.ForegroundBrush}"/>
        </Style>

        <!-- Default button style -->
        <Style TargetType="Button">
            <Setter Property="Foreground" Value="{DynamicResource App.ForegroundBrush}"/>
            <Setter Property="Background" Value="{DynamicResource App.PanelBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource App.SubtleBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="6,3"/>
            <Setter Property="Margin" Value="2"/>
        </Style>

        <!-- GroupBox style -->
        <Style TargetType="GroupBox">
            <Setter Property="Foreground" Value="{DynamicResource App.ForegroundBrush}"/>
            <Setter Property="Background" Value="{DynamicResource App.PanelBrush}"/>
        </Style>

        <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="Themes/AvatarTheme.xaml" />
    </ResourceDictionary.MergedDictionaries>    <!-- Merge in Avatar theme -->
   
       
        
    </Application.Resources>
</Application>
