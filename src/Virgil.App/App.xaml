<Application x:Class="Virgil.App.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Startup="Application_Startup">
    <Application.Resources>
        <ResourceDictionary>
            <!-- Thème Avatar -->
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Themes/Theme.xaml" />
                <ResourceDictionary Source="Themes/AvatarTheme.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <!-- Aliases legacy -->
            <SolidColorBrush x:Key="App.BackgroundBrush" Color="#F6F8FB" />
            <SolidColorBrush x:Key="App.PanelBrush" Color="#EEF1F6" />
            <SolidColorBrush x:Key="App.BorderBrush" Color="#EEF1F6" />
            <SolidColorBrush x:Key="App.AccentBrush" Color="#3B82F6" />
            <SolidColorBrush x:Key="App.AccentBrushSoft" Color="#E3EEFF" />
            <SolidColorBrush x:Key="App.TextPrimaryBrush" Color="#1F2933" />
            <SolidColorBrush x:Key="App.TextSecondaryBrush" Color="#51606E" />
            <SolidColorBrush x:Key="App.WarningBrush" Color="#F59E0B" />
            <SolidColorBrush x:Key="App.ErrorBrush" Color="#EF4444" />
            <SolidColorBrush x:Key="App.SuccessBrush" Color="#22C55E" />
            <!-- Style global des fenêtres -->
            <Style TargetType="Window">
                <Setter Property="Background" Value="{DynamicResource AppBackgroundBrush}" />
                <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}" />
            </Style>
            <!-- Style global du texte -->
            <Style TargetType="TextBlock">
                <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}" />
                <Setter Property="TextWrapping" Value="Wrap" />
            </Style>
            <!-- Style global des boutons -->
            <Style TargetType="Button">
                <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}" />
                <Setter Property="Background" Value="{DynamicResource CardBackgroundBrush}" />
                <Setter Property="BorderBrush" Value="{DynamicResource PanelBackgroundBrush}" />
                <Setter Property="BorderThickness" Value="1" />
                <Setter Property="Padding" Value="6,4" />
                <Setter Property="Margin" Value="0,2,0,2" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
